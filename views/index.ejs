    <!-- Particles Effect -->
    <div id="particles-js"></div>

    <div class="form-card text-center">
        <h2 class="mb-3"><i class="fa fa-prescription-bottle-alt"></i> Prescripta</h2>
        <p>Issue Blockchain-Based Prescriptions</p>

        <form id="prescription-form">
            <input type="text" id="doctorName" class="form-control mb-3" placeholder="Doctor's Name" required>
            <input type="text" id="patientName" class="form-control mb-3" placeholder="Patient Name" required>
            <input type="text" id="govNumber" class="form-control mb-3" placeholder="Government Number" required>
        
            <select id="gender" class="form-control mb-3" required>
                <option value="" disabled selected>Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        
            <input type="number" id="age" class="form-control mb-3" placeholder="Age" min="0" required>
        
            <div id="prescriptions">
                <div class="prescription-item">
                    <input type="text" class="form-control mb-2 medicine" placeholder="Medicine" required>
                    <input type="text" class="form-control mb-2 dosage" placeholder="Dosage (e.g., 2 times a day)" required>
                </div>
            </div>
        
            <button type="button" id="add-prescription" class="btn btn-success btn-sm mb-3">+ Add Another Prescription</button>
            <button type="submit" class="btn btn-primary"><i class="fa fa-file-medical"></i> Issue Prescription</button>
           
            <div id="prescription-id-container" style="display: none; margin-top: 20px; padding: 15px; background: #ffc107; color: #000; font-size: 18px; font-weight: bold; text-align: center; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
