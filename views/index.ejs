    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Particles.js for Animated Background -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>

    <style>
        /* Background Effect */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #007bff, #6610f2);
            color: white;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
          
        }

        /* Particles Effect */
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        /* Glassmorphism Card */
        .form-card {
            position: relative;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
            z-index: 1;
            margin-top: 80px;
        }

        /* Floating Labels */
        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control {
            background: transparent;
            border: none;
            border-bottom: 2px solid white;
            color: white;
            padding: 10px;
            font-size: 16px;
            width: 100%;
            outline: none;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-label {
            position: absolute;
            top: 10px;
            left: 10px;
            transition: 0.3s;
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control:focus ~ .form-label,
        .form-control:not(:placeholder-shown) ~ .form-label {
            top: -15px;
            left: 5px;
            font-size: 12px;
            color: #f8f9fa;
        }

        /* Button Styling */
        .btn-primary {
            background: white;
            color: #007bff;
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-size: 18px;
            transition: 0.3s ease-in-out;
            width: 100%;
            font-weight: bold;
        }

        .btn-primary:hover {
            background: #f8f9fa;
            color: #0056b3;
        }

        /* Result Section */
        #result {
            margin-top: 20px;
            font-weight: 600;
            text-align: center;
            color: #f8f9fa;
        }

        /* AI Response Box */
#ai-container {
    position: fixed;
    bottom: 20px; /* Keeps it near the bottom */
    right: 20px;
    width: 350px;
    max-height: 250px;
    overflow-y: auto;
    background: white;
    color: black;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    display: none; /* Hidden until AI responds */
}

/* Ensure content doesn't overflow */
#ai-response {
    word-wrap: break-word;
}

    </style>
</head>


